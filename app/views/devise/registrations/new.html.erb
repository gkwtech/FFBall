<div class="login-form-container">
<div class="login-title">Sign up</div>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :class => "login-form") do |f| %>
  <%= devise_error_messages! %>
  <div class="login-email-container">
    <%= f.label :email, :class => "login-email" %>
    <%= f.email_field :email, autofocus: true, :class => "login-email-field" %>
    </div>
    <div class="login-password-container">
    <%= f.label :password, :class => "login-password" %>
    <% if @validatable %>
    <% end %>
    <%= f.password_field :password, autocomplete: "off", :class => "login-password-field", placeholder: "(8 characters minimum)" %>
    </div>
    <div class="login-password-container">
    <%= f.label :password_confirmation, :class => "login-password" %>
    <%= f.password_field :password_confirmation, autocomplete: "off", :class => "login-password-field" %>
    </div>
    <%= f.submit "Sign up", :class => "login-submit" %>
<% end %>
</div>
<div class="links-container">
<%= render "devise/shared/links" %>
</div>
