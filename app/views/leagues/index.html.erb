<div class="user-home-container">
<div class="user-home-title">
My Teams and Leagues:
</div>
<% if @teams.empty? %>
You are not in any leagues. <%= link_to "Create a League Now", new_league_path %> and invite your friends!
<% end %>
<% @teams.each do |team| %>
<div class="user-home-row">
<%= link_to team.name, league_team_path(team.league, team), :class => "user-home-row-team-name" %>
<div class="user-home-row-team-record">
<%= "(#{team.wins} - #{team.losses} - #{team.ties}) | #{team.standing}" %>
</div>
<%= link_to team.league.name, league_path(team.league), :class => "user-home-row-team-league" %>
</div>
<% end %>
</div>
<div class="user-home-row-buttons-container">
<%= link_to "Join a League", teams_invite_path, :class => "index-join-league" %>
<%= link_to "Create a League", new_league_path, :class => "index-join-league" %>
</div>
